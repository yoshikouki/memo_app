%h2.mb-5.px-0
  = @memo.title

.card.mx-0.mb-3.p-5
  - @memo.formatted_text.each do |line|
    %p
      = line

.mb-5.px-0
  %a.btn.btn-block.btn-secondary.mb-3{ href: "#{@memo.id}/edit", role: 'button' }
    Edit
  %form#delete-form{ action: "/#{@memo.id}", method: 'post' }
    %input{ type: 'hidden', name: '_method', value: 'DELETE' }
    %button.btn.btn-block.btn-outline-danger{ type: 'submit' }
      Delete
